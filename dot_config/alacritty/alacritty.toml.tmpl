[env]
TERM = "xterm-256color"

[mouse]
hide_when_typing = false

[general]
live_config_reload = true
import = []

[window]
padding = { x = 3, y = 3 }
dynamic_padding = true
blur = false
opacity = 0.95
decorations = "Full"
decorations_theme_variant = "Dark"
option_as_alt = "Both"

[bell]
animation = "EaseOut"
duration = 150
color = "#1D1D1D"

[font]
size = 13.0

[font.bold]
family = "DejaVuSansM Nerd Font Mono"
style = "Heavy"

[font.bold_italic]
family = "DejaVuSansM Nerd Font Mono"
style = "Heavy Italic"

[font.italic]
family = "DejaVuSansM Nerd Font Mono"
style = "Medium Italic"

[font.normal]
family = "DejaVuSansM Nerd Font Mono"
style = "Regular"
