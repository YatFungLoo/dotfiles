[env]
TERM = "xterm-256color"

[mouse]
hide_when_typing = false

[general]
live_config_reload = true

[window]
option_as_alt = "Both"
opacity = 1
padding = { x = 3, y = 3 }
dynamic_padding = false

[bell]
animation = "EaseOut"
duration = 150
color = "#1D1D1D"

[font]
size = 12.0

{{ if eq .chezmoi.os "darwin" -}}
[font.bold]
family = "DejaVuSansM Nerd Font Mono"
style = "Heavy"

[font.bold_italic]
family = "DejaVuSansM Nerd Font Mono"
style = "Heavy Italic"

[font.italic]
family = "DejaVuSansM Nerd Font Mono"
style = "Medium Italic"

[font.normal]
family = "DejaVuSansM Nerd Font Mono"
style = "Regular"
{{- end }}
