theme = "yatfung"

[editor]
line-number = "relative"
mouse = true
auto-save = true
true-color = true
color-modes = true
bufferline = "always"
auto-pairs = true
rulers = [100, 140, 180, 220, 240]

[editor.statusline]
center = []
left = ["mode", "spinner", "version-control", "file-name"]
right = ["diagnostics", "selections", "position", "file-type"]

[editor.whitespace]
render = "all"

[editor.whitespace.characters]
newline = "Â¬"

[editor.cursor-shape]
insert = "bar"
normal = "block"
select = "underline"

[editor.lsp]
display-messages = true

[editor.file-picker]
hidden = false

[keys.normal]
"S-A-f" = ":fmt"
"A-s" = ":w"
"A-w" = ":bc"
"d" = "delete_selection_noyank"
"x" = "delete_selection"
"A-x" = "delete_selection_noyank"
"X" = "extend_line_below"

[keys.select]
"x" = "delete_selection"
"A-x" = "delete_selection_noyank"
"X" = "extend_line_below"

[keys.insert]
j = { j = "normal_mode" } # Maps `jj` to exit insert mode
C-p = "move_line_up"
C-n = "move_line_down"
C-e = "goto_line_end_newline"
C-a = "goto_line_start"
C-f = "move_char_right"
C-b = "move_char_left"

[keys.normal."]"]
"]" = "goto_next_paragraph"
[keys.normal."["]
"[" = "goto_prev_paragraph"

